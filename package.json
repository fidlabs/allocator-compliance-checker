    "@wtfcode/byte-converter": "1.7.11",
    "arraystat": "^1.7.81",
    "axios": "^1.7.2",
    "canvas": "^2.11.2",
    "chart.js": "^4.4.3",
    "chartjs-chart-geo": "^4.3.1",
    "chartjs-plugin-datalabels": "^2.1.0",
